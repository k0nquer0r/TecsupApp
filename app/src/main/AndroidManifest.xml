<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tecsupapp">
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TecsupApp">
        <activity
            android:name=".vistas.LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".vistas.LoginActivity" />

        <activity android:name=".vistas.HomeActivity"/>

        <activity android:name=".vistas.UsuariosActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".vistas.LoginActivity"/>

        </activity>

        <activity android:name=".vistas.RCursosActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".vistas.ActivityCursos"/>

        </activity>

        <activity android:name=".vistas.NewsActivity">
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".vistas.HomeActivity"/>
        </activity>

        <activity android:name=".vistas.ActivityCursos">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".vistas.HomeActivity"/>
        </activity>

        <activity android:name=".vistas.PerfilActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".vistas.HomeActivity"/>
        </activity>

        <activity android:name=".vistas.GestionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".vistas.HomeActivity"/>
        </activity>

    </application>

    //Desarrollado por @Frank-Ventura

</manifest>