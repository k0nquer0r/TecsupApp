<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de Cursos"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:textSize="25sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Codigo"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_alignParentLeft="true"
            android:textColorHint="@color/teal_200">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:hint="Codigo"
                android:inputType="number"
                android:textColor="@color/purple_200"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Curso"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_alignParentRight="true"
            android:textColorHint="@color/teal_200">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:hint="Curso"
                android:inputType="text"
                android:textColor="@color/purple_200"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Dni"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/Codigo"
            android:layout_alignParentLeft="true"
            android:textColorHint="@color/teal_200">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:hint="DNI"
                android:inputType="number"
                android:textColor="@color/purple_200"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Profesor"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/Curso"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/teal_200">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:hint="Profesor"
                android:inputType="text"
                android:textColor="@color/purple_200"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Carrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Dni"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/teal_200">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:hint="Carrera"
                android:inputType="text"
                android:textColor="@color/purple_200"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinnerfecha"
            android:layout_below="@+id/Carrera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            />

        <CheckBox
            android:id="@+id/activar"
            android:layout_below="@+id/spinnerfecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="Curso activo" />

        <Button
            android:layout_below="@+id/activar"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:text="Registrar"
            android:textSize="18sp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_below="@+id/activar"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:text="Limpiar"
            android:textSize="18sp"
            android:backgroundTint="@color/purple_200"/>

    </RelativeLayout>

    <!--Desarrollado por @Frank-Ventura-->

</LinearLayout>